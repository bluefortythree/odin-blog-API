extends layout 

block content 
        h1 #{post.title}
        h3 Author: #{post.author}
        div #{post.body}
        br
        div Posted on: #{f.format(post.created_at)}
        br
        if (post.edited_at)
            div Last updated: #{f.format(post.edited_at)}
        br
        a(href=`/posts/${post.id}/edit`) 
            button Edit
        br
        br
        if (post.published === true)
            form(action="", method = 'post') 
                button Unpublish 
        else 
            form(action="", method = 'post') 
                button Publish
        br
        a(href=`/posts/${post.id}/comments`)
            button View all comments
        br
        br
        a(href=`/posts`)
            button Back to posts